<configuration>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} [%mdc{}] - %msg%n</pattern>
        </encoder>
    </appender>


    <logger name="ru.hhschool.prisonerdilemma">
    </logger>

    <root level="debug">
        <appender-ref ref="console"/>
    </root>

</configuration>